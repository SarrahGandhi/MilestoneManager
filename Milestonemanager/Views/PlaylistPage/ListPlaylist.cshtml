@model IEnumerable<Milestonemanager.Models.PlaylistDTO>
@{
    ViewData["Title"] = "Index";
}
<h1 class="page-title">List Playlist</h1>

<div class="button-container">
    <a asp-action="Create" class="btn">Create New Playlist</a>
</div>

<div class="table-container">
    <table class="styled-table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PlaylistID" class="btn btn-mushroom">✏️</a>
                        <a asp-action="Delete" asp-route-id="@item.PlaylistID" class="btn btn-blush">🗑</a>
                        <a asp-action="Details" asp-route-id="@item.PlaylistID" class="btn">📋</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>
