<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Milestone Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Milestonemanager.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #F8F3F0;


        }

        .navbar {
            background: #D0B8AC !important;

        }

        .navbar-brand,
        .nav-link {
            color: #5A3E36 !important;
            font-weight: bold;
        }

        .nav-link:hover {
            color: #9B6A5B !important;
        }

        .container {
            background: #FFF;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        footer {
            background: #D0B8AC;
            color: #5A3E36;
            text-align: center;
            padding: 15px 0;
            font-weight: bold;

        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">💍 Milestone Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Swagger" asp-action="Index">API</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="AdminPage"
                                asp-action="ListAdmin">Admin</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="EventPage"
                                asp-action="ListEvent">Events</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="GuestPage"
                                asp-action="ListGuest">Guests</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="EventTaskPage"
                                asp-action="ListEventTask">Tasks</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="SongPage"
                                asp-action="ListSong">Songs</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="PlaylistPage"
                                asp-action="ListPlaylist">Playlists</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">&copy; 2025 - Milestone Manager | Planning Moments, Creating Memories</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
